@model Assignment2.Models.TblProduct

@{
    ViewData["Title"] = "Product";
}

@if (ViewBag.Message != null && ViewBag.Message != "")
{
    <h2 class="alert alert-success">@ViewBag.Message</h2>

}

<div class="panel panel-danger">
    @{


        IList<TblCategory> CatL = ViewBag.CL;

        SelectList CSL = new SelectList(CatL, "Categoryid", "CategoryName");

        IList<TblSubCategory> SCatL = ViewBag.SCL;

        SelectList SCSL = new SelectList(SCatL, "Scategoryid", "ScategoryName");
    }

